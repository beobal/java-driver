    <!-- DEBUGLOG rolling file appender to debug.log (all levels) -->

    <appender name="DEBUGLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/tmp/driver.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>/tmp/driver.log.%d{yyyy-MM-dd}.%i.zip</fileNamePattern>
            <!-- each file should be at most 50MB, keep 7 days worth of history, but at most 5GB -->
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%-5level [%thread] %date{ISO8601} %F:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ASYNCLOG assynchronous appender to debug.log (all levels) -->

    <appender name="ASYNCDEBUGLOG" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="DEBUGLOG" />
    </appender>

    <!-- adjust the driver's log verbosity; see
    http://datastax.github.io/java-driver/manual/logging/
    for more information -->
    <logger name="com.datastax.driver.core" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="ASYNCDEBUGLOG"/>
    </root>

</configuration>
